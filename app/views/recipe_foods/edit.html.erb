<section class="bs-section">
  <div class="my-5">
    <%= form_with model: @edit_recipe_food, method: 'PUT', url: user_recipe_recipe_food_path do |form| %>
      <div class='d-flex justify-content-center align-items-center gap-2'>
        <svg class='svg-icon pb-2 text-warning' fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"></path>
        </svg>
        <h2 class='text-warning'>Edit Ingredient</h2>
      </div>
      
      <hr>

      <div class="field mb-3">
        <%= form.label "Food", class: "form-label" %><br>
        <%= form.select :food_id, options_for_select(@foods.collect { |f| [f.name, f.id] }, selected: @edit_recipe_food.food_id), {prompt: "Select food", required: true, class: "form-select"} %>
      </div>

      <div class="field mb-3">
        <%= form.label :quantity, class: "form-label" %><br>
        <%= form.number_field :quantity, value: @edit_recipe_food.quantity, min: 0, step: 1, required: true, class: "form-control" %>
      </div>

      <div class="actions d-grid mb-3">
        <%= form.submit "Submit", class: "btn btn-outline-warning" %>
      </div>

      <%= link_to "Go back", user_recipe_path(@recipe.user_id, @recipe.id), class: "text-center" %>
    <% end %>
  </div>
</section>