
<section class="container">
    <div class="container my-5 d-flex justify-content-end">
    <%= link_to 'Add food', new_user_food_path, 'data-ripple-light': true,  class: "btn btn-outline-primary btn-sm" %>
    </div>
    <div class="mt-5 mx-5">
    <table class="table table-bordered table-hover bs mx-5">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement unit</th>
        <th scope="col">Unit price in $</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
   
    <tbody>
    <% if @foods.empty? %>
    <tr>
        <td rowspan='4'><i>No Foods</i></td>
    </tr>
    <% else %>
    <% @foods.each do|food| %> 
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td> <%= food.price %> </td>
        <td><%= food.quantity %></td>
        <td> <%= button_to 'Delete', user_food_path(food.user_id, food.id), method: :delete, 'data-ripple-light': true,  class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
      <%end%>
    <%end%>  
    </tbody>
        </table>
    </div>
</section>
